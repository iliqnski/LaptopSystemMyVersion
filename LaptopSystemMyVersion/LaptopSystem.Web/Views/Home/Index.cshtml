@model IEnumerable<LaptopSystem.Web.Models.LaptopViewModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var laptop = Model.ElementAt(i);
        <div class="col-md-4">
            <h3>@laptop.Manufacturer @laptop.Model</h3>
            <img src="@laptop.ImageUrl" alt="@laptop.Model" />
            <p>
                <a class="btn btn-default" href=@Url.Action("Details", "Laptops", new {laptop.Id})>
                    Price @laptop.Price
                </a>
            </p>
        </div>
    }
</div>