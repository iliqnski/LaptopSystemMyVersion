@model LaptopSystem.Web.Models.LaptopDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h3>@Model.Manufacturer @Model.Model</h3>
<div class="row">
    <div class="col-md-4">
        <div><strong>Monitor:</strong> @Model.MonitorSize''</div>
        <div><strong>RAM:</strong> @Model.RamMemorySize</div>
        <div><strong>Price:</strong> $@Model.Price</div>
    </div>
    <div class="col-md-4">
        <img src="@Model.ImageUrl" alt="@Model.Manufacturer"/>
    </div>
    <div class="col-md-4">
        @if (!String.IsNullOrEmpty(Model.Weight.ToString()))
        {
            <div><strong>Weight:</strong> @Model.Weight Kg</div>
        }
        @if (!String.IsNullOrEmpty(Model.AdditionalParts))
        {
            <div><strong>Additional parts:</strong> @Model.AdditionalParts</div>
        }
        @if (!String.IsNullOrEmpty(Model.Description))
        {
            <div><strong>Description:</strong><br/> @Model.Description</div>
        }
    </div>
</div>
<div id="Comments">
    @foreach (var comment in Model.Comments)
    {
        @Html.Partial("_CommentPartial", comment);
    }
</div>

@if (User.Identity.IsAuthenticated)
{
    using (Ajax.BeginForm("PostComment","Laptops",
        new AjaxOptions 
        { 
            HttpMethod = "Post", 
            InsertionMode = InsertionMode.InsertAfter, 
            UpdateTargetId = "Comments", 
            OnFailure="commentPostFailure",
            OnSuccess = "hideVoteButton"
        }))
    {
        
        @Html.TextArea("comment")
        @Html.AntiForgeryToken()
        <input type="hidden" name="LaptopId" id="LaptopId" value="@Model.Id" />
        <input type="submit" value="Submit comment" id="vote-button" />
    }   
}

@section scripts{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script>
    function commentPostFailure() {
            alert("Error");
        }

        function hideVoteButton() {
            $("#vote-button").hide();
        }
    </script>
}